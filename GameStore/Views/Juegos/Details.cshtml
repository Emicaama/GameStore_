@model Juego

@{
    ViewData["Title"] = "Detalles Juegos";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.nombreJuego
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.juegoFotoUrl" width="100%" alt="@Model.nombreJuego">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">@Model.descripcion</p>
                        <p class="card-text">
                            <b>Genero: </b>
                            <a asp-controller="Generos" asp-action="Details" asp-route-id="@Model.GeneroId">
                                @Model.Genero.nombreGenero
                            </a>
                        </p>
                        <p class="card-text">
                            <b>Empresa: </b>
                            <a asp-controller="Empresas" asp-action="Details" asp-route-id="@Model.EmpresaId">
                                @Model.Empresa.nombreEmpresa
                            </a>
                        </p>
                        <p class="card-text"><b>Fecha publicacion: </b>@Model.fechaPublicacion.ToString("dd MMM yy")</p>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Index">
                                Back to List
                            </a>
                            <a class="btn btn-success text-white 
                               asp-controller="Orders" 
                               asp-action="AddItemToShoppingCart" asp-route-id="@Model.Id"><i class="bi bi-cart-plus"></i> Añadir a carrito (Price @Model.precio.ToString("c"))</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
